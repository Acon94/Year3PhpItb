{% extends 'lecturer_base.html.twig' %}

{# ------------------------------------------------- #}
{% block pageTitle %}Job Creation{% endblock %}

{# ------------------------------------------------- #}
{% block indexLinkStyle %}current_page{% endblock %}

{# ------------------------------------------------- #}
{% block main %}



    <h1> Create a Job </h1>
    <fieldset>
        <legend>Fill in Job details</legend>

        <form
                method="post"
                action="/processJobsForm"
        >

            <p>
                Job position:
                <br>
                <input type="text" name="position" required>
            </p>
            <p>
                Job location:
                <br>
                <input type="text" name="location" required>
            </p>
            <p>
                Job expires:
                <br>
                <input type="datetime-local" name="expires" required>
            </p>
            <p>
                user:
                <br>
                <input type="text" name="user" required>
            </p>


            <p>
                <input type="submit" value="Create Job">
            </p>

        </form>
    </fieldset>



{% endblock %}