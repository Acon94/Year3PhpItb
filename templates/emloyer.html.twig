{% block main %}

<!-- start table for displaying DVD details -->
<h2>ALL applicants </h2>

    {# -------- offer button to clear the search,. if a search term is present -------- #}
    {% if searchText %}
        <a href="?action=list">(reset search)</a>
    {% endif %}
    

  <div id="viewmessages">  



    <table>
    <tr>
        <th> ID </th>
        <th> First-name </th>
        <th> Surname </th>
        <th> Age </th>
        <th> Position Applied for </th>
        <th> Download </th>
       
        
    </tr>



{% for dvd in dvds %}
    <tr>
        <td>{{ dvd.id }}</td>
        <td>{{ dvd.first }}</td>
        <td>{{ dvd.surname}}</td>
        <td>{{ dvd.age }}</td>
        <td>{{ dvd.position }}</td>
        
        <td>
         <form
		        action="/downloadCV&{{ dvd.id }}}"
		        method="get">
		        <input type="submit" value="Download cv">
	 </form>
        </td>
	
    </tr></div>
{% endfor %}

</table>

{% endblock %}
